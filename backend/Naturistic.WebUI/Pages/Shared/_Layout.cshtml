@using Microsoft.AspNetCore.Identity;
@using Microsoft.Extensions.Logging;
@using Naturistic.Infrastructure.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Naturistic.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	
    <link href="~/css/confirmation.css" rel="stylesheet" media="all">

	@RenderSection("AdditionalStyles", required: false)
</head>
<body>
    @inject UserManager<ApplicationUser> userManager;
    @inject ILogger<IdentityController> logger;

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            @if (String.IsNullOrEmpty(User.Identity.Name))
            {
                <p>Current User: Anonymous</p>
            }
            else
            {
                <div>Current user:</div> @User.Identity.Name <div>IsAuthenticated: </div> @User.Identity.IsAuthenticated
            }

            @*<p>Coockies:</p>
            @foreach (var coockie in Context.Request.Cookies)
            {
                <p>@coockie.Key: @coockie.Value.Substring(0, 20)</p>
            }*@
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Naturistic.WebUI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse"> -->
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>*@
                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        ApplicationUser usr = await userManager.FindByNameAsync(User.Identity.Name);
                        bool isUserEmailConfirmed = await userManager.IsEmailConfirmedAsync(usr);
                       
                    <ul class="navbar-nav flex-grow-1 hidden d-flex justify-content-end">
                            @if (!isUserEmailConfirmed)
                            {
                                <li class="nav-item">
                                    <a id="confirm_account_link" href="javascript:void(0)">Confirm account!</a>
                                </li>
                            }
                            <li class="nav-item">

                                <form id="header-signout-form" method="get" asp-page-handler="SignOut">
                                    <button class="text-white  btn btn-primary nav-link">Sign Out</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1  d-flex justify-content-end">
                            <li class="nav-item">
                                <a class="text-white margin-right-12 btn btn-primary nav-link" style="margin-right: 20px" href="/account/registration">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white  btn btn-primary nav-link" href="/account/login">Sign Up</a>
                            </li>
                        </ul>
                    }
            </div>
        </nav>
    </header>
    <main role="main" class="page-wrapper p-t-130 p-b-100 font-poppins">
		@RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Naturistic.WebUI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <div id="site_popup" class="b-popup" style="display: none">
        <div class="b-popup-content">
            <partial name="/Pages/Identity/Confirmation.cshtml" />
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/common.js" type="module"></script>
    <script src="~/js/EmailVerificationPopup.js" type="module"></script>
    <script src="~/js/site.js" type="module" asp-append-version="true"></script>

	@RenderSection("AdditionalScripts", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
