
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Routing;
@using Microsoft.AspNetCore.Routing.Patterns;
@using Microsoft.Extensions.Logging;
@using Naturistic.Core.Interfaces;
@using Naturistic.Infrastructure.Identity;

@inject ILocalizationService localization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Naturistic.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	
    <link href="~/lib/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/css/popup.css" rel="stylesheet" media="all">

    <link href="~/css/login.css" rel="stylesheet" media="all">
    <link href="~/css/inputs.css" rel="stylesheet" media="all">
    <link href="~/css/buttons.css" rel="stylesheet" media="all">
    <link href="~/css/verification.css" rel="stylesheet" media="all">

	@RenderSection("AdditionalStyles", required: false)
</head>
<body>
    <header>
        @{
            string locale = this.Context.Request.Cookies["locale"];
            localization.SetLocale(locale);

            bool renderConfirmationPopup = true;

            RouteEndpoint endpoit = Context.Request.HttpContext.GetEndpoint() as RouteEndpoint;

            if (endpoit.RoutePattern.PathSegments.Count > 1)
            {
                var locationEndointPart = endpoit.RoutePattern.PathSegments[0].Parts[0] as RoutePatternLiteralPart;
                var pageEndpointPart = endpoit.RoutePattern.PathSegments[1].Parts[0] as RoutePatternLiteralPart;

                @if (endpoit != null
                                  && locationEndointPart != null
                                  && locationEndointPart.Content == "account"
                                  && pageEndpointPart != null
                                  && pageEndpointPart.Content == "recovery")
                {
                    renderConfirmationPopup = true;
                    <partial name="/Pages/Shared/Recovery_Header.cshtml" />
                }
                else
                {
                    <partial name="/Pages/Shared/Header.cshtml" />
                }
            }
            else
            {
                <partial name="/Pages/Shared/Header.cshtml" />
            }
        }
    </header>

    <main role="main" class="page-wrapper p-t-130 p-b-100 font-poppins">
		@RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Naturistic.WebUI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @if (renderConfirmationPopup)
    {
        <div id="site_popup" class="b-popup" style="display: none">
            <div class="b-popup-content">
                <div class="wrapper wrapper--w680">
                    <div class="card card-4">
                        <div class="card-body">
                            <partial name="/Pages/Identity/Confirmation.cshtml" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div id="login_popup" class="b-popup" style="display: none">
        <div class="b-popup-content">
            <div class="wrapper wrapper--w680">
                <div class="card card-4">
                    <diV class="popup_content_header">
                        <a id="close_popup" href="#" class="box-close">×</a>
                    </div>
                    <div class="custom_card-body">
                        <partial name="/Pages/Identity/Login.cshtml" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="registration_popup" class="b-popup" style="display: block">
        <div class="b-popup-content">
            <div class="wrapper wrapper--w680">
                <div class="card card-4">
                    <diV class="popup_content_header">
                        <a id="registration_close_popup" href="#" class="box-close">×</a>
                    </div>
                    <div class="custom_card-body">
                        <partial name="/Pages/Identity/Registration.cshtml" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/common.js" type="module"></script>
    <script src="~/js/EmailVerificationPopup.js" type="module"></script>
    <script src="~/js/site.js" type="module" asp-append-version="true"></script>
    <script src="~/js/regform.js" type="module" asp-append-version="true"></script>

	@RenderSection("AdditionalScripts", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
