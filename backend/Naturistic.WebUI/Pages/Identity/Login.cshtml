@page "/account/login"
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
}

@section AdditionalScripts
{
	<script type="text/javascript" src="~/js/regform.js"></script>
	 
	<script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/lib/datepicker/moment.min.js"></script>
    <script src="~/lib/datepicker/daterangepicker.js"></script>

    <script src="~/js/regform.js"></script>
}

@section AdditionalStyles
{
	<link href="~/lib/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/lib/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/lib/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/lib/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <link href="~/css/regform.css" rel="stylesheet" media="all">
}

        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Login Form</h2>
                    <form method="POST">
                        <div class="row row-space">
                            <div class="col-8">
                                <div class="input-group">
                                    <label class="label">Username</label>
                                    <input class="input--style-4" type="text" name="nickname">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-8">
                                <div class="input-group">
                                    <label class="label">Password</label>
                                    <input class="input--style-4" type="password" name="password">
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>